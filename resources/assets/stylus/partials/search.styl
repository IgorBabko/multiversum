.search
    position: relative
    margin-bottom: 20px
    max-width: 600px
    margin: 0 auto
    
    &__input
        color: white
        border-bottom: 1px solid $lightBlue !important
        margin-top: 15px
        height: 50px
        width: 100%
        font-weight: 100
        background: none
        border: none
        font-size: 24px
        text-align: left !important
        padding-right: 30px
        padding-left: 30px
        &:focus
            outline: none !important
        &:hover
            color: white

    &__button
        color: $lightBlue
        background none
        border: none
        font-size: 28px !important
        position: absolute
        top: 17px
        right: 0
        cursor: pointer
        &:hover
            color: white

        &:focus
            outline none
    
    &__results
        color: white
        margin-top: 10px
        background: $lightBlue
        padding: 10px
        box-shadow: inset 0 0 3px 0 $blue
    
        span
            color: $yellow
        
    &__reset
        position: absolute
        top: 21px
        left: 0
        cursor: pointer
        font-size: 28px
        color: #ffb1b1
        
        &:hover
            color: #FF7777
        
        &:focus
            color: #FF7777
