.search
    position: relative
    margin-bottom: 20px
    max-width: 600px
    margin: 0 auto
    
    &__input
        margin-top: 15px
        height: 50px
        width: 100%
        background: none
        border: none
        border-bottom: 1px solid #a894b7
        color: white
        font-size: 24px
        text-align: left !important
        padding-right: 30px

        &:focus
            outline: none !important
            border-bottom: 1px solid white
    
    &__button
        background none
        border: none
        font-size: 28px !important
        position: absolute
        top: 17px
        right: 0
        cursor: pointer
        color: #A894B7

        &:hover
            color: #FCFFA5
        
        &:focus
            outline none