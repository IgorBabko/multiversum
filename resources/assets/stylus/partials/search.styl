.search
    position: relative
    margin-bottom: 20px
    max-width: 600px
    margin: 0 auto
    
    &__input
        margin-top: 15px
        height: 50px
        width: 100%
        font-weight: 100
        background: none
        border: none
        border-bottom: 1px solid black
        color: black
        font-size: 24px
        text-align: left !important
        padding-right: 30px
        padding-left: 30px

        &:focus
            outline: none !important
            border-bottom: 1px solid black
    
    &__main
        .search__input
            color: white
            border-bottom: 1px solid white
            &:focus
                outline: none !important
                border-bottom: 1px solid white
        
        .search__button
            color: white

    &__button
        background none
        border: none
        font-size: 28px !important
        position: absolute
        top: 17px
        right: 0
        cursor: pointer
        color: $darkGray
        
        &:hover
            color: black

        &:focus
            outline none
    
    &__results
        color: white
        margin-top: 10px
        background: $lightBlue
        padding: 10px
        box-shadow: inset 0 0 3px 0 $blue
    
        span
            color: $yellow
        
    &__reset
        position: absolute
        top: 21px
        left: 0
        cursor: pointer
        font-size: 28px
        color: #ffb1b1
        
        &:hover
            color: #FF7777
        
        &:focus
            color: #FF7777