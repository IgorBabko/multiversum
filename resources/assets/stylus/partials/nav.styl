@media screen and (max-width: 768px)
    .dropdown-menu
        width: 100%
    .navbar-collapse
        padding: 0
        background: $blue 

.navbar
    background: $blue 
    border-radius: 0
    margin-bottom: 0
    height: 50px
    border: none
    font-family: 'Roboto Slab', cursive
    
    .navbar-collapse
        border: none
        text-align center
    
    &.navbar-default
        .navbar-nav > li > a:hover,
        .navbar-nav > li > a:focus
            
        .navbar-nav > .open > a,
        .navbar-nav > .open > a:focus,
        .navbar-nav > .open > a:hover
            background: none

        .navbar-nav
            margin: 0
            background: $blue
            .dropdown-toggle
                &:focus
                    color: white
            > li
                a
                    color: white
                    padding-left: 10px
                    padding-right: 10px
                    padding-bottom: 14px
                .dropdown-menu
                    background: $blue
                    text-align: center
                    min-width: 118px
                    > .active > a,
                    > .active > a:focus,
                    > .active > a:hover
                        background: $darkBlue 
                        color: white !important
                    > li
                        > a
                            color: white  !important
                            font-size: 14px
                            padding-top: 10px
                            padding-bottom: 10px
                            border-bottom: none
                            background: none
                            
                        > a:focus,
                        > a:hover
                            background: $darkBlue 
                            color: white !important

                a
                    font-size: 16px
                    letter-spacing: 1.0px
                a:hover
                    background: $darkBlue !important
                    border-bottom: 1px solid $darkBlue 
                    color: white
                
                &:focus
                    background: $darkBlue 
                    color: white
                    
                &.active
                    a
                        background: $darkBlue
                        border-bottom: 1px solid $darkBlue 
                        color: white
                        &:hover
                            background: $darkBlue 

// hanburger menu
.navbar-default .navbar-header .navbar-toggle
    background none 
    border-color: black
    transition: all 0.1s ease-in-out
    .icon-bar
        color: black !important
        background: black

    &.collapsed
        background: none

@media screen and (min-width: 768px)
    .dropdown:hover .dropdown-menu
        display: block
        margin-top: 0
    .dropdown-menu
        a
            color: black !important
            padding: 5px !important

@media screen and (max-width: 767px)
    .navbar-nav
        .active
            a
                background $darkBlue !important
                color: white
        a
            padding: 15px !important
        .dropdown-menu
            padding: 0
            a
                color: white !important
                background: $blue !important
                padding: 10px !important

$speed = 200ms
$easing = cubic-bezier(0.7, 0, 0, 0.7)

.navbar-toggle
    overflow: hidden
    border-color: white !important

    .icon-bar
        background: white !important
        color: white
        transition: opacity, transform
        transition-duration: $speed
        transition-timing-function: $easing

    &:not(.collapsed)
        .icon-bar
            &:nth-child(1)
                transform: translateY(6px) rotate(45deg)
            &:nth-child(2)
                opacity: 0
                transform: translateX(-100%)
            &:nth-child(3)
                transform: translateY(-6px) rotate(-45deg)
