.footer
    // width: 100%
    background: #18131D
    padding: 20px 0
    font-size: 22px
    
    .item
        height: 95px
        padding: 20px 0
        text-align: center
        color: #978DBB
        i
            color: #FFA0DC
            font-size: 36px
            margin-right: 5px
        
        &:last-child
            line-height: 1
            border-right: none
    
    #email-link
        color: #978DBB
        
    .social-icons-list
        padding: 0
        li
            &:hover
                background: #FFA0DC
            cursor: pointer
            display: inline-block
            width: 45px
            height: 45px
            background: #978DBB
            border-radius: 50%
            margin-right: 20px
            padding: 10px 0 0 5px
            
            &:last-child
                margin-right: 0
            
            i
                color: #1a1335
                font-size: 28px
    
    #copyright
        font-size: 16px