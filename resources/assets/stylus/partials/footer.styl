@lost flexbox flex

.footer
    // width: 100%
    background: #18131D
    padding: 20px 0
    font-size: 22px
    font-family: 'Lobster', cursive

    &__content > div
        lost-waffle: 1/1 1 30px
        height: 95px
        padding: 20px 0
        text-align: center
        color: #978DBB
        &:last-child
            line-height: 1
            border-right: none

        @media screen and (min-width: 768px)
            lost-waffle: 1/2 2 30px

        @media screen and (min-width: 1100px)
            lost-waffle: 1/3 3 40px

    &__icon
            color: #FFA0DC
            font-size: 36px
            margin-right: 5px
    
    &__email
        color: #978DBB