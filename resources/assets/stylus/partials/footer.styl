.footer
    background: $darkerBlue
    padding: 0 50px
    font-size: 22px
    font-family: 'Roboto Slag', cursive

    &__content
        width: 100%
        lost-center: 100%

    &__content > *
        padding: 20px 0
        text-align: center
        color: $gray
        display: flex
        justify-content: center
        align-items: center
        lost-column: 1/1

        @media screen and (min-width: 1100px)
            lost-column: 1/3

    &__icon
            color: white//#FFA0DC
            font-size: 36px !important
            margin-right: 10px
    
    &__email
        color: #978DBB
        
    &__copyright
        font-size 18px 
