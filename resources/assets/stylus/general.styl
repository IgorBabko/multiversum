input::placeholder
    color: #A894B7

textarea::placeholder
    color: #A894B7

html
    height: 100%



body
    display: flex
    flex-direction: column
    justify-content: space-between
    min-height: 100%
    font-family: 'Roboto Slab', serif
    background: #6A4388

.logo
    font-family: 'Roboto Slab', serif
    color: #FFC7E9 !important
    font-weight: bold
    font-style: italic
    font-size: 32px
    text-decoration: none
    // text-transform: uppercase
    
    
    &:hover
        color: white !important
        text-decoration: none

.resource
    transition: all 0.3s ease-in-out
    transform: scale(0)

.visible
    transform: scale(1)