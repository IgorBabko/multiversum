input::placeholder
    color: #A894B7

textarea::placeholder
    color: #A894B7

html
    height: 100%



body
    display: flex
    flex-direction: column
    justify-content: space-between
    min-height: 100%
    font-family: 'Roboto Slab', serif
    background: #6A4388

.logo
    font-family: 'Lobster', cursive
    color: #FFC7E9 !important
    font-size: 40px
    text-shadow: 1px 1px 3px #000
    
    &:hover
        color: white !important
        text-decoration: none

.resource
    transition: all 0.4s cubic-bezier(0.51, 0.43, 0.44, 1.15)
    transform: scale(0)
    overflow: hidden

.visible
    transform: scale(1)