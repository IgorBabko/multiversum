/* ALERTS */
/* inspired by Twitter Bootstrap */

.alert
    padding: 15px
    margin-bottom: 20px
    // border: 1px solid #eed3d7
    border-radius: 0px
    position: fixed
    top: 60px
    right: 10px
    font-size: 16px
    z-index: 1000000
    /* Each alert has its own width */
    float: right 
    clear: right

.alert-red
    color: white
    background-color: #DA4453
.alert-green
    color: white
    background-color: $green
.alert-blue
    color: white
    background-color: #4A89DC
.alert-yellow
    color: white
    background-color: #F6BB42
.alert-orange
    color:white
    background-color: #E9573F