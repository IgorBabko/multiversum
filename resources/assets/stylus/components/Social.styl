.Social
    padding: 0
    margin-bottom: 0
    list-style: none
    &__item
        width: 45px
        height: 45px
        margin-right: 20px
        
        &:last-child
            margin-right: 0
    
    &__link
        display: inline-block
        width: 100%
        height: 100%
        border-radius: 50%
        background: #978DBB
        padding-top: 7px
        cursor: pointer
        &:hover
            background: #FFA0DC
        
        

    &__icon
        color: #1a1335
        font-size: 32px

    &__copiright
        font-size: 16px