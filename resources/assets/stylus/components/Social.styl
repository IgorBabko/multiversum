.Social
    padding: 0
    margin-bottom: 0
    list-style: none
    &__item
        width: 45px
        height: 45px
        margin-right: 20px
        color: $gray
        
        &:last-child
            margin-right: 0
    
    &__link
        display: inline-block
        width: 100%
        height: 100%
        border-radius: 50%
        background: $gray
        padding-top: 7px
        cursor: pointer
        color: $darkBlue
        &:hover
            background: $orange
            color: $gray
        

    &__icon
        font-size: 32px

    &__copiright
        font-size: 16px