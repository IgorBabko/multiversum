.Page
    color: #C2B1CE
    padding: 100px 50px 50px
    display: flex
    flex-direction: column
    align-items: center
    justify-content: flex-start
    flex-wrap: wrap

    &__heading
        flex-basis: 100%
        text-align: center
        color: #fffdba

    &__content
        background: #5A406D
        box-shadow: 0px 0px 20px 1px #301840
        padding: 30px 50px 70px
        font-size: responsive 16px 20px
        font-weight: 100
    
    &__button
        display: block
        margin: 0 auto
        border: 1px solid #A894B7
        padding: 0 20px
        height: 50px
        width: 100%
        background: none
        color: #A894B7
        font-size: 22px
        outline: none
        
        
        &:hover
            color: white
            border-color: white


    @media screen and (max-width: 994px)
        padding: 100px 30px 50px
        &__content
            padding: 20px

.Page-light
    &__content
        background: #f5e7ff
        color: black
    
    &__heading
        color: #483358