.Page
    color: black
    padding: 100px 50px 50px
    display: flex
    flex-direction: column
    align-items: center
    justify-content: flex-start
    flex-wrap: wrap

    &__heading
        flex-basis: 100%
        text-align: center
        color: $darkGray
        font-family: 'Lobster', cursive
        font-size: 56px
        margin: 0 0 20px 0
        position: relative

    &__content
        background: white//#5A406D
        box-shadow: 0px 0px 10px 0px #636363//#301840
        padding: 30px 50px
        font-size: responsive 14px 16px
        font-weight: 100
        
        &--with-resource
            min-width: 100%
    
    &__button
        display: block
        margin: 0 auto
        border: 1px solid #A894B7
        padding: 0 20px
        height: 50px
        width: 100%
        background: none
        color: #A894B7
        font-size: 22px
        outline: none
        
        
        &:hover
            color: white
            border-color: white


    @media screen and (max-width: 994px)
        padding: 100px 30px 50px
        &__content
            padding: 20px