.Page
    color: black
    display: flex
    align-items: center
    justify-content: center
    flex-wrap: wrap
    min-height: calc(100vh - 128px)

    &__heading
        flex-basis: 100%
        text-align: center
        color: $yellow
        font-family: 'Lobster', cursive
        font-size: 48px
        margin: 30px 0 20px 0
        position: relative
        
        &--sub
            font-size: 36px

        &--blue
            color: $darkBlue

    &__content 
        background: $darkestBlue 
        padding: 30px 50px
        font-size: responsive 14px 18px
        font-weight: 100
        color: #C7C7C7
        
        &--with-resource
            min-width: 100%

        &--center
            background: red  !important
            margin: 70px 20px 

        @media screen and (max-width: 768px)
            padding: 30px 10px 

    &__heading--center
        color: $darkerBlue
    
    &__button
        display: block
        margin: 0 auto
        border: 1px solid #A894B7
        padding: 0 20px
        height: 50px
        width: 100%
        background: none
        color: #A894B7
        font-size: 22px
        outline: none
        
        &:hover
            color: white
            border-color: white

    @media screen and (max-width: 994px)
        &__content
            padding: 20px

.Page__content--center
    background: $lightGray
    margin-top: 100px

.Page__heading--center
    color: $darkBlue
