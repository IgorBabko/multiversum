.Book
    width: 220px !important
    box-shadow: 0 0 5px 1px #432E51

    &__link
        display: block
        text-decoration: none !important
        position: relative
        color: #6a4388
        &:hover
            color: #6a4388
            .Book__overlay
                opacity: 1
        
    &__overlay
        transition: all 0.2s ease-in-out
        opacity: 0
        display: flex
        justify-content: center
        align-items: center
        position: absolute
        color: white
        top: 0
        left: 0
        width: 100%
        height: 250px
        font-size: 48px
        background: rgba(24,19,29,0.7)

    &__heading
        background white
        font-size: 24px
        text-align left
        padding: 10px 10px
        margin: 0

@media screen and (min-width: 768px)
    .Disk
        lost-waffle: 1/2 2 20px

@media screen and (min-width: 994px)
    .Disk
        lost-waffle: 1/3 3 30px

@media screen and (min-width: 1300px)
    .Disk
        lost-waffle: 1/3 3 40px