.Book
    max-width: 220px !important
    margin: 0 auto

    &__link
        display: block
        text-decoration: none !important
        position: relative
        color: #6a4388
        &:hover
            color: #6a4388

    &__heading
        font-size: 20px
        text-align center
        padding: 10px 10px
        margin: 0
        color: black

.Book-expanded
    &__date
        text-align: center
        font-style: italic
        font-size: 16px
        margin-bottom: 30px
    
    &__buy
        background: #599062//#6A4388
        border: none
        color: white
        &:hover
            background: #43734B//#432E51
            color: white
        margin: 15px 0
        font-size: 20px
        border-radius: 0
