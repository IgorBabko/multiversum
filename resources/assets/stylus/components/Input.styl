.Input
    width: 100%
    margin-bottom: 30px
    height: 50px
    background: none
    border: none
    border-bottom: 1px solid #9C9C9C
    font-size: 24px
    font-family: 'Roboto Slab', sans-serif
    font-weight: 100
    
    &:focus
        outline: none !important
    
    &--subscription
        background: white
        border: none
        margin: 0
        color: black
        padding-left: 10px
        font-size: 18px
