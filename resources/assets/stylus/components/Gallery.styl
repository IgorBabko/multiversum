@lost flexbox flex

.Gallery
    lost-center: 100%
    max-width: 480px
    margin-top: 50px
    display: flex
    justify-content: center

    > div
        lost-waffle: 1/1 1 30px

        @media screen and (min-width: 768px)
            lost-waffle: 1/2 2 30px

        @media screen and (min-width: 1100px)
            lost-waffle: 1/3 3 40px

        @media screen and (min-width: 1400px)
            lost-waffle: 1/4//50px

@media screen and (min-width: 768px)
    .Gallery
        max-width: 768px

@media screen and (min-width: 994px)
    .Gallery
        max-width: 994px

@media screen and (min-width: 1300px)
    .Gallery
        max-width: 1300px