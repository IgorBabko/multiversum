.header
    min-height: 100vh
    width: 100vw
    color: white
    font-family: 'Roboto Slab'
    font-size: 20px
    font-weight: 100
    padding: 100px 50px 50px
    text-align: center
    @media screen and (min-width: 994px)
        background-repeat: no-repeat
        background-size: contain
        background-position: right center

    &__container
        margin-top: 50px
        text-align: center

    &__iframe
        max-width: 600px
        position: relative
        margin: 50px auto

    &__iframe__ratio
        width: 100%

    &__about
        font-size: 20px
        font-weight: 100
        text-align: left

    &__heading
        font-family: 'Lobster', cursive
        margin-top: 0
        font-size: 48px
        color: $yellow

    &__button
        background: $yellow
        color: black
        border-radius: 0
        font-size: 24px
        margin-top: 20px
        
        &--subscription
            background: $green
            
            &:hover
                background: $darkGreen

        &:hover
            background: $darkYellow

    &__buttons
        display: flex
        font-size: 24px
        margin-top: 50px
        bottom: 50px

    &__quote
        text-align: center
        font-size: 28px
        color: white
        
    
