.about
    display: flex
    flex-wrap: wrap
    padding: 50px 100px
    justify-content: center

    &__avatar
        height: 200px
        display: inline-block
        position: relative
        &:before
            content: ''
            position: absolute
            top: 0
            left: 0
            width: 100%
            height: 100%
            border-radius: 50%
            box-shadow: inset 0 0 0 15px rgba(0,0,0,0.3)

    &__bio
        flex: 1
        text-align: left
        margin-left: 40px
        font-size: responsive 18px 24px
        font-weight 100

    @media screen and (max-width: 768px)
        padding: 30px
        &__heading
            flex-basis: 100%

        &__bio
            flex-basis: 100%
            text-align: left
            margin: 40px 0 0 40px
